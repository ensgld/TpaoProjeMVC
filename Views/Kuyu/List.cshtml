@model KuyuListViewModel
@{
    ViewData["Title"] = "Kuyu Listesi";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h4 class="fw-bold text-success">Kuyu Arama ve Listeleme</h4>
        <p class="text-muted small">Kuyu adına göre arama yapabilir veya tüm kuyuları listeleyebilirsiniz.</p>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-6 col-lg-5">
            <form asp-controller="Kuyu" asp-action="List" method="get">
                <div class="input-group input-group-sm shadow-sm">
                    <input name="arananKelimeq" type="text" class="form-control" value="@Model.ArananKelime"
                        placeholder="Kuyu adı giriniz..." value="@ViewData["arananKelime"]">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-search"></i> Ara
                    </button>
                </div>
            </form>
        </div>
    </div>
    <h4>Eşleşen Kuyular</h4>

    @if (@Model.AramaSonuclari.Count == 0)
    {
        <div class="alert alert-danger">Kuyu bulunamadı</div>
    }
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @foreach (var kuyu in Model.AramaSonuclari)
        {
            @await Html.PartialAsync("Partials/Kuyu/_KuyuCards", kuyu)
        }
    </div>

</div>
