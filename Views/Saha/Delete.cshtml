@model Saha
<div class="row">
    <div class="col ">
        <div class="card">
            <div class="card-body text-center">
                <p>
                    @Model.sahaAdı isimli Sahayı silmek istediğinize emin misiniz?
                </p>
                <form asp-controller="Saha" asp-action="DeleteConfirm" method="post">
                    <input type="hidden" name="id" value="@Model.SahaId">
                    <button type="submit" class="btn btn-danger">Sil</button>
                    <a class="btn btn-primary" asp-controller="Saha" asp-action="Index">İptal</a>
                </form>

            </div>
        </div>

    </div>

</div>