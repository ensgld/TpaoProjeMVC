@model SahaEditModel
@{
    ViewData["Title"] = "Saha Güncelleme";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-3">
        <div class="card-body p-4">
            <h2 class="text-primary mb-4">Saha Güncelleme</h2>

            <form asp-controller="Saha" asp-action="Edit" asp-route-id="@Model.SahaId" method="post">
                <input type="hidden" name="SahaId" value="@Model.SahaId">
                <div class="mb-3">
                    <label asp-for="sahaAdı" class="form-label">Saha Adı</label>
                    <input asp-for="sahaAdı" class="form-control" placeholder="Örn: Güneydoğu Sahası" />
                    <span asp-validation-for="sahaAdı" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" placeholder="Örn: Şanlıurfa" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Latitude" class="form-label"></label>
                    <input asp-for="Latitude" class="form-control" placeholder="Örn: 37.12345" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Longitude" class="form-label"></label>
                    <input asp-for="Longitude" class="form-control" placeholder="Örn: 37.12345" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Saha" asp-action="Index" class="btn btn-secondary">Geri Dön</a>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")
}