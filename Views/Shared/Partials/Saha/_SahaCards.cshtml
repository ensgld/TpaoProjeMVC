@model Saha

<div class="col">
    <div class="card h-100 small-card shadow-sm border-0 hover-shadow">
        <div class="card-body p-2">
            <h6 class="card-title text-primary mb-1">Saha: @Model.sahaAdı</h6>
            <p class="card-text text-danger medium mb-2">
                Şehir:@Model.City
            </p>

            <a asp-controller="Saha" asp-action="Details" asp-route-id="@Model.SahaId"
                class="btn btn-outline-primary btn-sm w-100">Detay</a>
        </div>
    </div>
</div>